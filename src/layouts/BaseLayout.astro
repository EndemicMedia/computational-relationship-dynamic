---
import { execSync } from 'child_process';

export interface Props {
  title?: string;
  description?: string;
}
const {
  title = 'Computational Relationship Dynamics',
  description = 'A collision-based framework for simulating romantic pair bonding at scale.',
} = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');

let commit = 'unknown';
try { commit = execSync('git rev-parse --short HEAD').toString().trim(); } catch {}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="site-nav">
      <div class="container nav-inner">
        <a href={base} class="nav-logo">âš› CRD</a>
        <ul class="nav-links">
          <li><a href={base}>Abstract</a></li>
          <li><a href={`${base}methodology`}>Methodology</a></li>
          <li><a href={`${base}simulation`}>Simulation</a></li>
          <li><a href={`${base}results`}>Results</a></li>
        </ul>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <p>
          Collision-Based Modeling of Romantic Pair Bonding &mdash;
          Computational Relationship Dynamics Framework &copy; 2025
          &ensp;<code>{commit}</code>
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  footer {
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
    margin-top: 4rem;
  }
  footer p {
    color: var(--color-text-muted);
    font-size: 0.8rem;
    text-align: center;
    margin: 0;
  }
  footer code {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    opacity: 0.6;
  }
</style>
